{
  "name": "damolinx-sorbetto",
  "displayName": "Sorbetto for VS Code",
  "description": "Sorbetto provides Ruby Language features using Sorbet, a type checker for Ruby.",
  "author": "damolinx",
  "publisher": "damolinx",
  "license": "Apache-2.0",
  "version": "0.3.2",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/damolinx/vscode-sorbetto"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "extensionKind": [
    "workspace"
  ],
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "ruby",
    "sorbet",
    "sorbetto",
    "language-server"
  ],
  "activationEvents": [
    "onLanguage:ruby",
    "workspaceContains:sorbet/*"
  ],
  "languages": [
    {
      "id": "ruby",
      "extensions": [
        ".rb",
        ".rbi",
        ".srb"
      ],
      "aliases": [
        "Ruby"
      ]
    }
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sorbetto.copySymbolToClipboard",
        "title": "Copy Symbol to Clipboard",
        "category": "Sorbetto",
        "enablement": "workbenchState != empty && editorLangId == ruby && (resourceScheme == file || resourceScheme == sorbet || resourceScheme == vscode-remote) && sorbetto:sorbetStatus != disabled && sorbetto:sorbetStatus != error"
      },
            {
        "command": "sorbetto.debugRubyFile",
        "title": "Debug Ruby File",
        "category": "Sorbetto",
        "icon": "$(debug)",
        "enablement": "workbenchState != empty && !inDebugMode && editorIsOpen && (resourceScheme == file || resourceScheme == vscode-remote) && resourceExtname == .rb"
      },
      {
        "command": "sorbetto.restart",
        "title": "Restart Sorbet",
        "category": "Sorbetto",
        "enablement": "workbenchState != empty"
      },
      {
        "command": "sorbetto.runRubyFile",
        "title": "Run Ruby File",
        "category": "Sorbetto",
        "icon": "$(run)",
        "enablement": "workbenchState != empty && editorIsOpen && (resourceScheme == file || resourceScheme == vscode-remote) && resourceExtname == .rb"
      },
      {
        "command": "sorbetto.setup.workspace",
        "title": "Setup Workspace",
        "category": "Sorbetto",
        "enablement": "workbenchState != empty"
      }
    ],
    "configuration": [{
        "title": "Sorbetto for VS Code",
        "properties": {
          "sorbetto.enableWatchman": {
            "scope": "resource",
            "type": "string",
            "default": "Auto",
            "markdownDescription": "Use `watchman` to improve file watching performance. Check [documentation](https://sorbet.org/docs/lsp#watchman).",
            "enum": [
              "Auto",
              "Enabled",
              "Disabled"
            ],
            "markdownEnumDescriptions": [
              "Use `watchman` if available",
              "Always use `watchman`. Sorbet will fail to start if it is not available",
              "Disable `watchman`"
            ]
          },
          "sorbetto.restartFilePatterns": {
            "scope": "resource",
            "type": "array",
            "description": "Glob patterns that would force a restart of Sorbet.",
            "items": {
              "type": "string"
            },
            "default": [
              "**/sorbet/config",
              "**/Gemfile.lock"
            ],
            "uniqueItems": true
          },
          "sorbetto.sorbetLspConfiguration": {
            "scope": "resource",
            "type": "string",
            "default": "stable",
            "description": "Specifies the LSP configuration to use.",
            "enum": [
              "disabled",
              "stable",
              "custom"
            ],
            "enumItemLabels": [
              "Disabled",
              "Stable",
              "Custom"
            ],
            "markdownEnumDescriptions": [
              "Disable Sorbet language server",
              "Enable Sorbet language server",
              "Use configuration defined in the [`sorbetLspCustomConfiguration`](#sorbetto.sorbetLspConfiguration) setting"
            ]
          },
          "sorbetto.sorbetLspCustomConfiguration": {
            "scope": "resource",
            "type": "array",
            "default": [],
            "items": {
              "type": "string",
              "minLength": 1
            },
            "markdownDescription": "Specifies a custom LSP Server launch configuration. Used when [`sorbetLspConfiguration`](#sorbetto.sorbetLspConfiguration) is `custom`; ignores [`sorbetto.sorbetTypecheckCommand`](#sorbetto.sorbetTypecheckCommand) value."
          },
          "sorbetto.sorbetTypecheckCommand": {
            "scope": "resource",
            "type": "array",
            "markdownDescription": "Command used to invoke `srb typecheck`.",
            "default": [
              "bundle",
              "exec",
              "srb",
              "typecheck"
            ],
            "items": {
              "type": "string",
              "minLength": 1
            },
            "minLength": 1
          }
        }
      },
      {
        "title": "Preferences",
        "properties": {
          "sorbetto.alwaysShowStatusItems": {
            "type": "boolean",
            "default": false,
            "description": "Keep Sorbet language status items visible whenever an editor is open, not only when the active editor is Ruby. Note: VS Code hides all status items when no editor is open."
          },
          "sorbetto.highlightUntypedCode": {
            "type": "string",
            "default": "disabled",
            "description": "Highlight untyped code.",
            "enum": [
              "disabled",
              "everywhere",
              "everywhere-but-tests"
            ],
            "enumItemLabels": [
              "Disabled",
              "Everywhere",
              "Everywhere but tests"
            ]
          },
          "sorbetto.highlightUntypedCodeDiagnosticSeverity": {
            "type": "string",
            "default": "Warning",
            "description": "Diagnostic severity used when reporting untyped code.",
            "enum": [
              "Error",
              "Warning",
              "Information",
              "Hint"
            ],
            "enumDescriptions": [
              "Red squiggles",
              "Yellow squiggles",
              "Blue squiggles",
              "No squiggles"
            ]
          },
          "sorbetto.typedFalseCompletionNudges": {
            "type": "boolean",
            "markdownDescription": "Display an auto-complete nudge in `typed: false` files.",
            "default": true
          },
          "sorbetto.updateRequireRelative": {
            "type": "boolean",
            "markdownDescription": "Update `require_relative` statements when moving files.",
            "default": true
          }
        }
      },
      {
        "title": "Beta & Experimental",
        "properties": {
          "sorbetto.enableAllBetaFeatures": {
            "scope": "resource",
            "type": "boolean",
            "default": false,
            "markdownDescription": "Enable all **beta** features. These features are considered ready for open beta."
          },
          "sorbetto.enableAllExperimentalFeatures": {
            "scope": "resource",
            "type": "boolean",
            "default": false,
            "markdownDescription": "Enable all **experimental** features. These features might be unstable and lead to crashes."
          },
          "sorbetto.enableRbsSupport": {
            "scope": "resource",
            "type": "boolean",
            "default": false,
            "markdownDescription": "Enable **experimental** RBS support. Implicitly enabled by [`enableAllExperimentalFeatures`](#sorbetto.enableAllExperimentalFeatures). Check [documentation](https://sorbet.org/docs/rbs-support)"
          },
          "sorbetto.enableRequiresAncestor": {
            "scope": "resource",
            "type": "boolean",
            "default": false,
            "markdownDescription": "Enable **experimental** `requires_ancestor` support. Implicitly enabled by [`enableAllExperimentalFeatures`](#sorbetto.enableAllExperimentalFeatures). Check [documentation](https://sorbet.org/docs/requires-ancestor)."
          }
        }
      }
    ],
    "configurationDefaults": {
      "[ruby]": {
        "editor.defaultFormatter": "damolinx.damolinx-sorbetto",
        "editor.formatOnSave": true,
        "editor.wordBasedSuggestions": "off"
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "sorbetto.copySymbolToClipboard",
          "group": "9_cutcopypaste",
          "when": "workbenchState != empty && resourceLangId == ruby"
        }
      ]
    },
    "snippets": [
      {
        "language": "ruby",
        "path": "resources/file-snippets.code-snippets"
      },
      {
        "language": "ruby",
        "path": "resources/snippets.code-snippets"
      }
    ]
  },
  "scripts": {
    "compile": "npm run compile:check-types && node esbuild.mjs",
    "compile:check-types": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "watch": "tsc -w -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "package": "npm run compile:check-types && node esbuild.mjs --production",
    "vsce-package": "vsce package",
    "vscode:prepublish": "npm run package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@stylistic/eslint-plugin": "^5.2.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.18.0",
    "@types/sinon": "^17.0.0",
    "@types/vscode": "~1.99",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-electron": "^2.5.0",
    "@vscode/vsce": "^3.5.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.30.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^11.0.0",
    "mocha": "^11.0.0",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.35.0",
    "vscode-languageserver": "^9.0.1"
  }
}
