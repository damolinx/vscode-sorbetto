{
  "name": "damolinx-sorbetto",
  "displayName": "Sorbetto for VS Code",
  "description": "Ruby language features using Sorbet, a type checker for Ruby.",
  "author": "damolinx",
  "publisher": "damolinx",
  "license": "Apache-2.0",
  "version": "0.3.24",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/damolinx/vscode-sorbetto"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "extensionKind": [
    "workspace"
  ],
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "rbs",
    "ruby",
    "sorbet",
    "sorbetto",
    "language-server"
  ],
  "activationEvents": [
    "onLanguage:ruby",
    "onLanguage:sorbet-config",
    "workspaceContains:sorbet/*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sorbetto.autocorrectAll",
        "title": "Autocorrect Error Codes (All Files)",
        "category": "Sorbetto",
        "enablement": "workbenchState != empty && sorbetto:active"
      },
      {
        "command": "sorbetto.copySymbol",
        "title": "Copy Symbol",
        "category": "Sorbetto",
        "enablement": "workbenchState != empty && editorLangId == ruby && (resourceScheme == file || resourceScheme == sorbet || resourceScheme == vscode-remote) && sorbetto:sorbetStatus == running"
      },
      {
        "command": "sorbetto.debugRubyFile",
        "title": "Debug Ruby File",
        "category": "Sorbetto",
        "icon": "$(debug)",
        "enablement": "workbenchState != empty && !inDebugMode && editorIsOpen && (resourceScheme == file || resourceScheme == vscode-remote) && resourceExtname == .rb"
      },
      {
        "command": "sorbetto.openPackage",
        "title": "Open Package File",
        "category": "Sorbetto",
        "enablement": "workbenchState != empty && editorLangId == ruby"
      },
      {
        "command": "sorbetto.peekHierarchyReferences",
        "title": "Peek Hierarchy References",
        "category": "Sorbetto",
        "enablement": "workbenchState != empty && editorLangId == ruby && (resourceScheme == file || resourceScheme == sorbet || resourceScheme == vscode-remote) && sorbetto:sorbetStatus == running"
      },
      {
        "command": "sorbetto.restart",
        "title": "Restart Sorbet",
        "category": "Sorbetto",
        "enablement": "sorbetto:active && (sorbetto:sorbetStatus && sorbetto:sorbetStatus != disabled)"
      },
      {
        "command": "sorbetto.sendToSorbetRun",
        "title": "Send Selection to sorbet.run",
        "category": "Sorbetto",
        "enablement": "workbenchState != empty && editorHasSelection && editorLangId == ruby"
      },
      {
        "command": "sorbetto.start",
        "title": "Start Sorbet",
        "category": "Sorbetto",
        "enablement": "sorbetto:active && (!sorbetto:sorbetStatus || sorbetto:sorbetStatus == disabled)"
      },
      {
        "command": "sorbetto.stop",
        "title": "Stop Sorbet",
        "category": "Sorbetto",
        "enablement": "sorbetto:active && sorbetto:sorbetStatus != disabled"
      },
      {
        "command": "sorbetto.runRubyFile",
        "title": "Run Ruby File",
        "category": "Sorbetto",
        "icon": "$(run)",
        "enablement": "workbenchState != empty && editorIsOpen && (resourceScheme == file || resourceScheme == vscode-remote) && resourceExtname == .rb"
      },
      {
        "command": "sorbetto.setup.workspace",
        "title": "Setup Workspace",
        "category": "Sorbetto",
        "enablement": "workbenchState != empty"
      },
      {
        "command": "sorbetto.updateRbis",
        "title": "Update RBIs",
        "category": "Sorbetto",
        "enablement": "workbenchState != empty"
      }
    ],
    "configuration": [
      {
        "title": "Preferences",
        "properties": {
          "sorbetto.alwaysShowStatusItems": {
            "type": "boolean",
            "default": false,
            "description": "Keep Sorbet language status items visible whenever an editor is open, not only when the active editor is Ruby. Note: VS Code hides all status items when no editor is open."
          },
          "sorbetto.compactSorbetDiagnostics": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Reformat Sorbet diagnostic messages into a compact layout in the **Problems** pane and error tooltips."
          },
          "sorbetto.highlightUntypedCode": {
            "type": "string",
            "default": "disabled",
            "description": "Highlight untyped code.",
            "enum": [
              "disabled",
              "everywhere",
              "everywhere-but-tests"
            ],
            "enumItemLabels": [
              "Disabled",
              "Everywhere",
              "Everywhere but tests"
            ]
          },
          "sorbetto.highlightUntypedCodeDiagnosticSeverity": {
            "type": "string",
            "default": "Warning",
            "description": "Diagnostic severity used when reporting untyped code.",
            "enum": [
              "Error",
              "Warning",
              "Information",
              "Hint"
            ],
            "enumDescriptions": [
              "Red squiggles",
              "Yellow squiggles",
              "Blue squiggles",
              "No squiggles"
            ]
          },
          "sorbetto.typedFalseCompletionNudges": {
            "type": "boolean",
            "markdownDescription": "Display an auto-complete nudge in `typed: false` files.",
            "default": true
          },
          "sorbetto.updateRequireRelative": {
            "type": "boolean",
            "markdownDescription": "Update `require_relative` statements when moving files.",
            "default": true
          }
        }
      },
      {
        "title": "Sorbet",
        "properties": {
          "sorbetto.enableWatchman": {
            "scope": "resource",
            "type": "string",
            "default": "Auto",
            "markdownDescription": "Use `watchman` to improve file watching performance. Check [documentation](https://sorbet.org/docs/lsp#watchman).",
            "enum": [
              "Auto",
              "Enabled",
              "Disabled"
            ],
            "markdownEnumDescriptions": [
              "Use `watchman` if available",
              "Always use `watchman`. Sorbet will fail to start if it is not available",
              "Disable `watchman`"
            ]
          },
          "sorbetto.maximumDiagnosticsCount": {
            "type": "number",
            "default": 1000,
            "minimum": 0,
            "maximum": 10000,
            "markdownDescription": "Maximum number of diagnostics Sorbet will report (**0** means no limit). High values may impact editor performance. Check [documentation](https://sorbet.org/docs/cli-ref#lsp-options)."
          },
          "sorbetto.restartFilePatterns": {
            "scope": "resource",
            "type": "array",
            "description": "Glob patterns that would force a restart of Sorbet.",
            "items": {
              "type": "string"
            },
            "default": [
              "**/sorbet/config",
              "**/Gemfile.lock"
            ],
            "uniqueItems": true
          },
          "sorbetto.sorbetLspConfiguration": {
            "scope": "resource",
            "type": "string",
            "default": "stable",
            "description": "Specifies which configuration is used to start the Sorbet language server.",
            "enum": [
              "disabled",
              "stable",
              "custom"
            ],
            "enumItemLabels": [
              "Disabled",
              "Stable",
              "Custom"
            ],
            "markdownEnumDescriptions": [
              "Disable Sorbet.",
              "Start Sorbet using its standard configuration (`srb tc --lsp ...`).",
              "Start Sorbet using the custom launch command defined in the `sorbetLspCustomConfiguration` setting."
            ]
          },
          "sorbetto.sorbetLspCustomConfiguration": {
            "scope": "resource",
            "type": "array",
            "default": [],
            "items": {
              "type": "string",
              "minLength": 1
            },
            "markdownDescription": "Specifies a custom configuration for launching the language server. Used when [`sorbetLspConfiguration`](#sorbetto.sorbetLspConfiguration) is `custom`; ignores [`sorbetto.sorbetTypecheckCommand`](#sorbetto.sorbetTypecheckCommand) value."
          },
          "sorbetto.sorbetTypecheckCommand": {
            "scope": "resource",
            "type": "array",
            "markdownDescription": "Command used to invoke `srb typecheck`.",
            "default": [
              "bundle",
              "exec",
              "srb",
              "typecheck"
            ],
            "items": {
              "type": "string",
              "minLength": 1
            },
            "minLength": 1
          },
          "sorbetto.trace.server": {
            "type": "string",
            "default": "off",
            "description": "Trace communication between VS Code and the Sorbet language server.",
            "enum": [
              "off",
              "messages",
              "verbose"
            ],
            "enumDescriptions": [
              "Disable all logging.",
              "Log request and response messages.",
              "Log all traffic, including full message bodies."
            ]
          }
        }
      },
      {
        "title": "Sorbet Beta & Experimental",
        "properties": {
          "sorbetto.enableAllBetaLspFeatures": {
            "scope": "resource",
            "type": "boolean",
            "default": false,
            "markdownDescription": "Enable all **beta** Sorbet language server features. These features are considered ready for open beta."
          },
          "sorbetto.enableAllExperimentalLspFeatures": {
            "scope": "resource",
            "type": "boolean",
            "default": false,
            "markdownDescription": "Enable all **experimental** Sorbet language server features. These features might be unstable and lead to crashes."
          },
          "sorbetto.enablePackageSupport": {
            "scope": "resource",
            "type": "boolean",
            "default": false,
            "markdownDescription": "Enable **experimental**  support for Sorbet's Ruby package system. Check [documentation](https://sorbet.org/docs/cli-ref#sorbet-packages-mode-options)."
          },
          "sorbetto.enableRbsSupport": {
            "scope": "resource",
            "type": "boolean",
            "default": false,
            "markdownDescription": "Enable **experimental** RBS support. Check [documentation](https://sorbet.org/docs/rbs-support)."
          },
          "sorbetto.enableRequiresAncestor": {
            "scope": "resource",
            "type": "boolean",
            "default": false,
            "markdownDescription": "Enable **experimental** `requires_ancestor` support. Check [documentation](https://sorbet.org/docs/requires-ancestor)."
          },
          "sorbetto.enableRubyfmt": {
            "scope": "resource",
            "type": "boolean",
            "default": false,
            "markdownDescription": "Path to the [Rubyfmt](https://github.com/fables-tales/rubyfmt) executable used for document formatting. If it is not installed or not on your PATH, this option has no effect. Check [documentation](https://sorbet.org/docs/cli-ref#lsp-feature-options)."
          },
          "sorbetto.rubyfmtPath": {
            "scope": "resource",
            "type": "string",
            "markdownDescription": "Enable **experimental** document formatting with [Rubyfmt](https://github.com/fables-tales/rubyfmt). Used when [`enableRubyfmt`](#sorbetto.enableRubyfmt) is active. Check [documentation](https://sorbet.org/docs/cli-ref#lsp-feature-options).",
            "pattern": "^(|\\S+)$",
            "patternErrorMessage": "Value must be empty, or a path"
          }
        }
      }
    ],
    "configurationDefaults": {
      "[ruby]": {
        "editor.wordBasedSuggestions": "off"
      }
    },
    "grammars": [
      {
        "scopeName": "rbs.sig.comment",
        "path": "./resources/syntaxes/rbs-comment.tmLanguage.json",
        "embeddedLanguages": {
          "meta.type.signature.rbs": "rbs"
        },
        "injectTo": [
          "source.ruby"
        ]
      },
      {
        "scopeName": "source.sorbet-config",
        "path": "./resources/syntaxes/sorbet-config.tmLanguage.json",
        "language": "sorbet-config"
      }
    ],
    "languages": [
      {
        "id": "ruby",
        "aliases": [
          "Ruby"
        ],
        "extensions": [
          ".gemspec",
          ".rb",
          ".rbi"
        ],
        "filenames": [
          "Gemfile"
        ]
      },
      {
        "id": "sorbet-config",
        "aliases": [
          "Sorbet Config"
        ],
        "filenamePatterns": [
          "**/sorbet/config"
        ]
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "sorbetto.copySymbol",
          "group": "0_sorbetto@1",
          "when": "workbenchState != empty && resourceLangId == ruby && sorbetto:sorbetStatus"
        },
        {
          "command": "sorbetto.peekHierarchyReferences",
          "group": "0_sorbetto@2",
          "when": "workbenchState != empty && resourceLangId == ruby && sorbetto:sorbetStatus"
        }
      ]
    },
    "snippets": [
      {
        "language": "ruby",
        "path": "resources/file-snippets.code-snippets"
      },
      {
        "language": "ruby",
        "path": "resources/snippets.code-snippets"
      }
    ]
  },
  "scripts": {
    "compile": "npm run ts:check-types && npm run ts:compile",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "node ./out/test/runTest.js",
    "ts:check-types": "tsc --noEmit",
    "ts:compile": "tsc -p ./",
    "ts:watch": "tsc -w -p ./",
    "vsce-package": "vsce package",
    "vscode:prepublish": "npm run ts:check-types && node esbuild.mjs --production",
    "watch": "npm run ts:watch"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.18.0",
    "@types/sinon": "^17.0.0",
    "@types/vscode": "~1.105",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vscode/test-electron": "^2.5.0",
    "@vscode/vsce": "^3.7.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.30.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^11.1.0",
    "mocha": "^11.0.0",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.35.0",
    "vscode-languageserver": "^9.0.1"
  },
  "overrides": {
    "diff": "^8.0.3",
    "glob": "^11.1.0",
    "js-yaml": "^4.1.1"
  }
}