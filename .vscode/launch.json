{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}"
      ],
      "outFiles": [
        "${workspaceRoot}/out/**/*.js"
      ],
      "preLaunchTask": "watch",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/out/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Test Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/test/suite/index"
      ],
      "outFiles": [],
      "preLaunchTask": "watch",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/out/**",
        "!**/node_modules/**"
      ]
    }
  ]
}